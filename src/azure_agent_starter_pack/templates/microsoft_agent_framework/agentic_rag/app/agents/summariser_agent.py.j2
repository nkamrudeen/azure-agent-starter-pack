"""Summariser agent: condenses information into concise summaries."""

import os

from azure.ai.projects import AIProjectClient
from azure.identity import DefaultAzureCredential


def create_summariser_agent(client: AIProjectClient):
    """Create a summariser agent."""
    return client.agents.create_agent(
        model=os.getenv("AZURE_OPENAI_DEPLOYMENT", "gpt-4o"),
        name="summariser_agent",
        instructions=(
            "You are a summarisation specialist. Take the provided content and "
            "produce a clear, concise summary with key takeaways and action items."
        ),
    )
