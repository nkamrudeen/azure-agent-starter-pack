"""Research agent: searches knowledge sources using Azure AI tools."""

import os

from azure.ai.projects import AIProjectClient
from azure.identity import DefaultAzureCredential


def create_research_agent(client: AIProjectClient):
    """Create a research agent with search tool capabilities."""
    return client.agents.create_agent(
        model=os.getenv("AZURE_OPENAI_DEPLOYMENT", "gpt-4o"),
        name="research_agent",
        instructions=(
            "You are a research specialist. Use the available tools to search "
            "for relevant information and return structured results. "
            "Always cite your sources."
        ),
    )
