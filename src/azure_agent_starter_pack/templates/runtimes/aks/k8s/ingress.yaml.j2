apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ project_name | replace("_", "-") }}
  namespace: {{ project_name | replace("_", "-") }}
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  tls:
    - hosts:
        - {{ project_name | replace("_", "-") }}.example.com
      secretName: {{ project_name | replace("_", "-") }}-tls
  rules:
    - host: {{ project_name | replace("_", "-") }}.example.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ project_name | replace("_", "-") }}
                port:
                  name: http
