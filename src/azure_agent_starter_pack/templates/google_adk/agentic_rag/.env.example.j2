# {{ project_name }} — Agentic RAG environment variables
# Copy to .env and fill in values — never commit .env to git

{% if framework == "google_adk" %}
# ── Model provider (choose ONE section below) ──────────────────────────

# Option A: Google Gemini (default when AZURE_OPENAI_DEPLOYMENT is unset)
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_API_KEY=
# GOOGLE_MODEL=gemini-2.0-flash

# Option B: Azure OpenAI via LiteLLM
# Set AZURE_OPENAI_DEPLOYMENT to activate Azure OpenAI instead of Gemini.
#   Auth — pick one:
#     B1) API key (set AZURE_API_KEY; works on ACA, local dev, etc.)
AZURE_API_KEY=
#     B2) Managed Identity (leave AZURE_API_KEY blank; set USE_MANAGED_IDENTITY=true)
#         For User-Assigned MI on ACA, also set AZURE_MANAGED_IDENTITY_CLIENT_ID.
# USE_MANAGED_IDENTITY=true
# AZURE_MANAGED_IDENTITY_CLIENT_ID=
{% endif %}

# Azure OpenAI (LLM + Embeddings)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure AI Search
AZURE_AI_SEARCH_ENDPOINT=
AZURE_AI_SEARCH_INDEX={{ project_name | replace("_", "-") }}-index

{% if framework == "microsoft_agent_framework" %}
# Azure AI Foundry (Microsoft Agent Framework)
AZURE_AI_PROJECT_CONNECTION_STRING=
{% endif %}

# Azure Key Vault
KEY_VAULT_URL=

# RAG settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5

# App settings
PORT=8000
ENVIRONMENT=dev
