"""Root agent: orchestrates sub-agents using Google ADK."""

from google.adk.agents import Agent

from app.agents.research_agent import research_agent
from app.agents.summariser_agent import summariser_agent
from app.model_config import get_model

root_agent = Agent(
    name="root_agent",
    model=get_model(),
    description="Root orchestrator that delegates to specialist sub-agents.",
    instruction=(
        "You are the orchestrator for {{ project_name }}. "
        "Delegate research questions to research_agent and "
        "summarisation requests to summariser_agent. "
        "Always provide a concise final answer to the user."
    ),
    sub_agents=[research_agent, summariser_agent],
)
