# {{ project_name }} environment variables
# Copy to .env and fill in values — never commit .env to git

# ── Model provider (choose ONE section below) ──────────────────────────

# Option A: Google Gemini (default when AZURE_OPENAI_DEPLOYMENT is unset)
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_API_KEY=
# GOOGLE_MODEL=gemini-2.0-flash

# Option B: Azure OpenAI via LiteLLM
# Set AZURE_OPENAI_DEPLOYMENT to activate Azure OpenAI instead of Gemini.
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-12-01-preview
#   Auth — pick one:
#     B1) API key (set AZURE_API_KEY; works on ACA, local dev, etc.)
AZURE_API_KEY=
#     B2) Managed Identity (leave AZURE_API_KEY blank; set USE_MANAGED_IDENTITY=true)
#         For User-Assigned MI on ACA, also set AZURE_MANAGED_IDENTITY_CLIENT_ID.
# USE_MANAGED_IDENTITY=true
# AZURE_MANAGED_IDENTITY_CLIENT_ID=

# ── Azure Key Vault ─────────────────────────────────────────────────────
KEY_VAULT_URL=

# ── App settings ────────────────────────────────────────────────────────
PORT=8000
ENVIRONMENT=dev
